<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/stop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@style/AppTheme"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/left"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/stop" />

    <ImageButton
        android:id="@+id/down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/stop"
        android:layout_alignLeft="@+id/rot"
        android:background="#00000000"
        android:src="@drawable/arrowdown" />

    <ImageButton
        android:id="@+id/up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/rot"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/surface"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        android:src="@drawable/arrowup" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/left"
        android:background="#00000000"
        android:src="@drawable/arrowright" />

    <ImageButton
        android:id="@+id/rot"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/right"
        android:layout_alignTop="@+id/up"
        android:layout_marginRight="31dp"
        android:layout_marginTop="33dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/all" />

    <ImageButton
        android:id="@+id/left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/rot"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/right"
        android:background="#00000000"
        android:src="@drawable/arrowleft" />

    <TextView
        android:id="@+id/errors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/up"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:text="TextView"
        android:textColorHint="#FF0000"
        android:textSize="12sp" />

</RelativeLayout>