<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg" >

    <TextView
        android:id="@+id/errors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Login"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/iptxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/errors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="#00000000"
        android:ems="10"
        android:textColorHint="#000000" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/passtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iptxt"
        android:layout_below="@+id/iptxt"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        android:ems="10"
        android:inputType="textPassword" />

    <ImageButton
        android:id="@+id/authbtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignRight="@+id/errors"
        android:layout_below="@+id/passtxt"
        android:layout_marginTop="40dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/padlock" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/authbtn"
        android:layout_below="@+id/authbtn"
        android:text="Authenticate"
        android:textColor="#000000"
        android:textSize="11sp"
        android:textStyle="normal"
        android:typeface="monospace" />

</RelativeLayout>
