<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg" >

    <ImageButton
        android:id="@+id/cntrlbtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="80dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/control" />

    <ImageButton
        android:id="@+id/spybtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="80dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/spy" />

    <ImageButton
        android:id="@+id/infobtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/informationideogram" />

    <ImageButton
        android:id="@+id/helpbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/questionideogram" />

    <TextView
        android:id="@+id/infotxt"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/infobtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:gravity="center_horizontal"
        android:text="Info"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/helpbtn"
        android:layout_marginBottom="6dp"
        android:text="Help"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/helpcontent"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spybtn"
        android:layout_below="@+id/spybtn"
        android:text="Spy"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cntrlbtn"
        android:layout_alignTop="@+id/helpcontent"
       android:gravity="center_horizontal"
        android:text="Control"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="monospace" />

</RelativeLayout>
