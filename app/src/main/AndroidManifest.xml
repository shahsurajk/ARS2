<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.RemoteSurveillance.ARS2"
    android:versionCode="1"
    android:versionName="1.0" xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" tools:ignore="OldTargetApi"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.BATTERY_STATS"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@drawable/spy"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.RemoteSurveillance.ARS2.ui.Activity_SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".Spy"
            android:screenOrientation="landscape" />
        <activity android:name=".Controller"
            android:screenOrientation="landscape" />
        <activity android:name=".ui.Activity_ControllerConnection"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".ui.Activity_SpyConnection"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".ui.Activity_Login"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".Info"
            android:screenOrientation="landscape"></activity>
        <activity  android:name=".Help"
            android:screenOrientation="landscape"></activity>
        
        </application>

</manifest>
